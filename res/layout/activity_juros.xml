<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:stretchColumns="1,2,3"
    tools:context=".Juros" >

    <!-- tableRow0 -->
<TableRow
        android:id="@+id/tableRow0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_span="4"
            >

            <RadioButton
                android:id="@+id/idDjurosSimplesRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jurosSimples"
                android:onClick="onRadioButtonClicked"
                android:checked="true"
                android:textSize="20sp"
                android:textStyle="bold" />
       

        <RadioButton
            android:id="@+id/idDjurosComposto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jurosComposto"
            android:onClick="onRadioButtonClicked"
            android:textSize="20sp"
            android:textStyle="bold" />
           </RadioGroup>
  </TableRow>
      <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/billTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingRight="5dp"
            android:text="Valor Presente"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/idValorPresente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="12"
            android:textSize="18sp" />

        <!-- ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/falar"
            android:src="@android:drawable/ic_btn_speak_now" /-->
    </TableRow>

    <!-- tableRow4 -->

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/idPercentual"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="@string/custom"
            android:textSize="18sp" />
          <EditText
            android:id="@+id/idValorPercentual"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="7"
            android:textSize="18sp" />
          
          <Spinner 
              android:id="@+id/idPeriodoTx"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:entries="@array/periodo"
              android:prompt="@string/label_tx_periodo"
              />

    </TableRow>

    <!-- tableRow5 -->

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tipCustomTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingRight="5dp"
            android:text="Tempo"
            android:textSize="18sp" />


          <EditText
            android:id="@+id/idTempo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="7"
            android:textSize="18sp" />
             <Spinner 
              android:id="@+id/idTipoPeriodo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:entries="@array/periodo"
              android:prompt="@string/label_tx_periodo"/>

    </TableRow>

    <!-- TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/idTotalDescontoFinal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center"
            android:longClickable="false"
            android:text="@string/zero"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:textSize="30sp" />
    </TableRow-->

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/resposta" />

</TableLayout>